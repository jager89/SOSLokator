<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="match_parent"
	android:orientation="vertical">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/hello" />
	<Button android:layout_height="wrap_content" android:id="@+id/buttonGetLocation"
		android:text="@string/buttonGetLocation" android:layout_width="match_parent"></Button>
	<TextView android:visibility="visible" android:id="@+id/textViewLocation"
		android:text="TextView" android:layout_height="wrap_content"
		android:layout_width="wrap_content"></TextView>
	<Button android:layout_height="wrap_content" android:id="@+id/buttonShowOnMap"
		android:text="@string/buttonShowOnMap" android:layout_width="match_parent"></Button>
	<Button android:layout_height="wrap_content" android:id="@+id/buttonSendSMS"
		android:text="@string/buttonSendSMS" android:layout_width="match_parent"></Button>
</LinearLayout>
